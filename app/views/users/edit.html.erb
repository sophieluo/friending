
<%= form_for @user, url: user_path, html: { multipart: true } do |f| %>

  Name: <%= f.text_field :name %>
    <br>
  Email: <%= f.text_field :email %>
    <br>
  Your Native Language: <%= f.text_field :native_lang %>
    <br>
  Language You Want to Learn: <%= f.text_field :learn_lang %>
    <br>
  <%= f.file_field :avatar %>

  <%= f.submit "Submit" %>

<% end %>
